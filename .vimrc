# /.vimrc

"colors
syntax on
" amount of spaces used for tab
set tabstop=2

" use spaces for tab
set expandtab

" amount of spaces used during indentation
set shiftwidth=2
" show number in front of the lines
set number

" Highlight cursor line underneath the cursor horizontally.
set cursorline

" Highlight cursor line underneath the cursor vertically.
set cursorcolumn

" Ignore capital letters during search.
set ignorecase
